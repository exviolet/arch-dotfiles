// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-pro"
    },
    "model_parameters": []
  },
  "title_bar": {
    "show_menus": false,
    "show_branch_icon": true
  },
  "theme": "Moegi Dark",
  "project_panel": {
    "dock": "right"
  },
  "inlay_hints": {
    "enabled": false
  },
  "base_keymap": "VSCode",
  "vim_mode": true,
  "relative_line_numbers": true,
  "gutter": {
    "folds": false,
    "breakpoints": false,
    "runnables": false
  },
  "minimap": {
    "show": "never"
  },
  "icon_theme": {
    "mode": "dark",
    "light": "Zed (Default)",
    "dark": "Catppuccin Macchiato"
  },
  "ui_font_size": 16,
  "buffer_font_size": 15.0,
  // "theme": "Moegi Dark",
  "outline_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": true
  },
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "languages": {
    "Python": {
      "language_servers": ["pyright", "ty", "!basedpyright"]
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    },
    "basedpyright": {
      "settings": {
        "analysis": {
          "diagnosticMode": "workspace",
          "inlayHints.callArgumentNames": false
        }
      }
    }
  }
}
